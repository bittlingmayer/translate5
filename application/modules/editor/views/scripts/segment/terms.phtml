    $i = 0;
    foreach($this->termGroups as $termGroup) {
        $target = array();
        $source = array();
        foreach($termGroup as $term) {
            $src = $this->publicModulePath.'/images/'.$term->status.'.png';
            switch ($term->status) {
                case editor_Models_Term::STAT_ADMITTED:
                    $title = $this->translate->_('erlaubte Benennung');
                    break;
                case editor_Models_Term::STAT_LEGAL:
                    $title = $this->translate->_('erlaubte Benennung');
                    break;
                case editor_Models_Term::STAT_REGULATED:
                    $title = $this->translate->_('erlaubte Benennung');
                    break;
                case editor_Models_Term::STAT_STANDARDIZED:
                    $title = $this->translate->_('erlaubte Benennung');
                    break;
                case editor_Models_Term::STAT_DEPRECATED:
                    $title = $this->translate->_('verbotene Benennung');
                    break;
                case editor_Models_Term::STAT_SUPERSEDED:
                    $title = $this->translate->_('verbotene Benennung');
                    break;
                case editor_Models_Term::STAT_PREFERRED:
                    $title = $this->translate->_('Vorzugsbenennung');
                    break;
                default:
                    $title = $this->translate->_('Unbekannter Term Status');
            }
            $itemStr = sprintf('<img src="%1$s" alt="%2$s" title="%2$s"/>', $src, $title);
            $class = array($term->status);
            if($term->used){
                $class[] = 'used';
            }
            if($term->transFound){
                $class[] = 'transfound';
            }
            $itemStr .= sprintf('<span class="%3$s" title="%2$s">%1$s</span>', $term->term, $term->definition, join(' ', $class));
            if($term->isSource) {
                $source[] = $itemStr;
            }
            else {
                $target[] = $itemStr;
            }
        }
?>
        <tr class="<?php echo ($i++ % 2 == 0)?'even':'odd'; ?>">
            <td>
                <?php echo join("<br />\n", $source); ?>
            </td>
            <td>
                <?php echo join("<br />\n", $target); ?>
            </td>
        </tr>
<?php
    }
?>
